<div class="navbar-cillas_wardrobe">
  <!-- Logo -->
  <%= link_to root_path do %>
    <div class="navbar-cillas_wardrobe-brand">
      <%= image_tag "logo/logo_200x200.png", height: 50 %>
      <div class="navbar-site-title">CW</div>
    </div>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <div class="dropdown center-it">
      <span class="navbar-cillas_wardrobe-link dropdown-toggle dropdown" data-toggle="dropdown">
        <div>
          <i class="fas fa-list-alt"></i><br>
          products
        </div>
      </span>
      <div class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu ">
        <%# byebug %>
        <li><%= link_to "<i class=\"fas fa-tshirt\"><\/i> Clothing".html_safe, clothing_path, class: "dropdown-item" %></li>
          <li class="dropdown-divider"></li>
        <li><%= link_to "<i class=\"fas fa-shoe-prints\"><\/i> Shoes".html_safe, shoes_path, class: "dropdown-item" %></li>
        <li><%= link_to "<i class=\"fas fa-coffee\"><\/i> Home".html_safe, home_path, class: "dropdown-item" %></li>
          <li><hr></li>
          <li> <%= link_to "<i class=\"fas fa-tshirt\"></i> <em>New Styles</em>".html_safe %> </li>
      </div>
    </div>



    <% if user_signed_in? %>

      <!-- Avatar with dropdown menu -->
      <div class="dropdown center-it">
        <span class="dropdown-toggle" data-toggle="dropdown"><!-- Hi -->
          <div class="navbar-avatar-initials">
            <%= current_user.first_name[0] + current_user.last_name[0] %>
          </div>
        </span>

        <div class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to new_product_path do %>
              <i class="fas fa-plus-circle"></i>  New Product
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </div>
      </div>
    <% else %>
    <% # byebug %>
      <% if cookies[:cookie_accept] %>
        <div>
          <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-cillas_wardrobe-link navbar-login-message" %>
        </div>
      <% end %>
    <% end %>




  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <div class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "<i class=\"fas fa-tshirt\"><\/i> Clothing".html_safe, clothing_path %></li>
        <li><%= link_to "<i class=\"fas fa-shoe-prints\"><\/i> Shoes".html_safe, shoes_path %></li>
        <li><%= link_to "<i class=\"fas fa-coffee\"><\/i> Home".html_safe, home_path %></li>
      </div>
    </div>
  </div>
</div>

