<div class="container">
  <h1 class="page-name">Clothes in Cilla's Wardrobe</h1>
  <hr>

    <% @all_home_products.each do |product| %>
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0 col-md-3">
        <div class="index-page-card-outer">
          <div class="index-page-card-inner">
            <%= link_to home_item_path(product) do %>
              <div class="index-page-card-image-container" style="">
              <%= image_tag "sample_product_06.jpg" %>
              <div class="index-page-card-image-bottom-fade"></div>
              </div>
              <div class="index-page-card-brand-holder">
                <div class="index-page-card-brand-name">
                  <%= product.brand.name %>
                </div>
              </div>
              <div class="index-page-card-price">
                <%= product.price - 1 %> SEK
              </div>
            <% end %>
            <div class="index-page-card-splash">
              <i class="fas fa-recycle"></i>
            </div>
          </div>
        </div>
      </div>
    <% end %>

</div>
